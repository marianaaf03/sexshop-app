@model List<SexShop.Web.Services.CartItem>
@{
    ViewData["Title"] = "Tu Carrito de Placer";
}

<div class="row pt-4 mb-4">
    <div class="col-12 text-center">
        <h1 class="fw-bold">Tu <span class="text-accent">Carrito</span></h1>
        <p class="text-secondary">Revisa tus productos antes de finalizar la compra.</p>
    </div>
</div>

@if (Model.Any())
{
    <div class="row g-4">
        <div class="col-lg-8">
            @foreach (var item in Model)
            {
                <div class="card mb-3 shadow-sm">
                    <div class="row g-0 align-items-center">
                        <div class="col-md-2 p-2">
                            <img src="@item.ImageUrl" class="img-fluid rounded" alt="@item.ProductName" style="height: 80px; width: 100%; object-fit: cover;">
                        </div>
                        <div class="col-md-4 px-3">
                            <h5 class="fw-bold mb-0">@item.ProductName</h5>
                            <span class="text-accent fs-5 fw-bold">$@item.Price.ToString("N0")</span>
                        </div>
                        <div class="col-md-3 text-center">
                            <div class="d-flex align-items-center justify-content-center gap-2">
                                <form asp-action="UpdateQuantity" method="post" class="d-inline">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <input type="hidden" name="quantity" value="@(item.Quantity - 1)" />
                                    <button type="submit" class="btn btn-sm btn-outline-accent rounded-circle" style="width: 30px; height: 30px; padding: 0;">
                                        <i class="bi bi-dash"></i>
                                    </button>
                                </form>
                                <span class="fw-bold mx-2" style="min-width: 30px; text-align: center;">@item.Quantity</span>
                                <form asp-action="UpdateQuantity" method="post" class="d-inline">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <input type="hidden" name="quantity" value="@(item.Quantity + 1)" />
                                    <button type="submit" class="btn btn-sm btn-accent rounded-circle" style="width: 30px; height: 30px; padding: 0;">
                                        <i class="bi bi-plus"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                        <div class="col-md-2 text-end fw-bold">
                            <span class="text-white">$@item.Total.ToString("N0")</span>
                        </div>
                        <div class="col-md-1 text-center">
                            <a asp-action="Remove" asp-route-productId="@item.ProductId" class="text-danger fs-4"><i class="bi bi-trash"></i></a>
                        </div>
                    </div>
                </div>
            }
            
            <div class="d-flex justify-content-between mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light rounded-pill px-4"><i class="bi bi-arrow-left me-2"></i>Seguir Comprando</a>
                <a asp-action="Clear" class="btn btn-outline-danger rounded-pill px-4">Vaciar Carrito</a>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card p-4 shadow-lg border-accent">
                <h4 class="fw-bold mb-4">Resumen de Compra</h4>
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-secondary">Subtotal</span>
                    <span class="fw-bold">$@Model.Sum(x => x.Total).ToString("N0")</span>
                </div>
                <div class="d-flex justify-content-between mb-4">
                    <span class="text-secondary">Envío</span>
                    <span class="text-success fw-bold">Gratis</span>
                </div>
                <hr class="border-secondary">
                <div class="d-flex justify-content-between mb-4">
                    <span class="fs-5 fw-bold">Total</span>
                    <span class="fs-4 fw-bold text-accent">$@Model.Sum(x => x.Total).ToString("N0")</span>
                </div>
                
                @if (User.Identity!.IsAuthenticated)
                {
                    <a asp-controller="Order" asp-action="Checkout" class="btn btn-primary w-100 py-3 fw-bold">FINALIZAR COMPRA</a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light w-100 py-3 fw-bold mb-2">INICIA SESIÓN PARA COMPRAR</a>
                    <p class="small text-secondary text-center">Debes estar registrado para poder realizar un pedido.</p>
                }
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="bi bi-cart-x display-1 text-secondary opacity-25"></i>
        <h2 class="mt-4">Tu carrito está vacío</h2>
        <p class="text-secondary mb-4">Parece que aún no has añadido nada a tu colección.</p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg px-5 rounded-pill">IR A LA TIENDA</a>
    </div>
}

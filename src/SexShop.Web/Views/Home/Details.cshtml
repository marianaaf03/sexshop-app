@model SexShop.Application.DTOs.ProductDto
@{
    ViewData["Title"] = Model.Name + " - Olove";
}

<div class="container mt-5 mb-5">
    <div class="row pt-4">
        <div class="col-md-6 mb-4">
            <div class="img-container p-5 bg-light rounded-4 text-center">
                <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name" style="max-height: 500px; object-fit: contain;">
            </div>
        </div>
        <div class="col-md-6 px-lg-5">
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-accent text-decoration-none">Inicio</a></li>
                    <li class="breadcrumb-item active text-muted" aria-current="page">@Model.Name</li>
                </ol>
            </nav>
            
            <h1 class="display-5 fw-bold mb-3">@Model.Name</h1>
            <p class="text-muted fs-5 mb-4">@Model.Description</p>
            
            <div class="mb-5">
                <span class="display-6 fw-bold text-accent">$@Model.Price.ToString("N0")</span>
                <p class="text-success small fw-bold mt-2"><i class="bi bi-check2-circle me-2"></i>PRODUCTO EN STOCK</p>
            </div>
            
            <div class="d-grid gap-3 mt-5">
                <form asp-controller="Cart" asp-action="Add" method="post" class="w-100">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <button type="submit" class="btn btn-buy w-100 py-3 fs-5 shadow-sm">AÑADIR AL CARRITO</button>
                </form>
                <button class="btn btn-outline-secondary py-3 fs-5 rounded-pill"><i class="bi bi-heart me-2"></i>AÑADIR A FAVORITOS</button>
            </div>
            
            <div class="mt-5 p-4 bg-light rounded-4">
                <div class="d-flex align-items-start mb-3">
                    <i class="bi bi-shield-check fs-2 text-accent me-3"></i>
                    <div>
                        <h6 class="fw-bold mb-1">Compra Silenciosa y Segura</h6>
                        <p class="small text-muted mb-0">Enviamos en embalajes discretos sin identificación del contenido.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

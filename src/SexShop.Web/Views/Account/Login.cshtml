@model SexShop.Application.DTOs.LoginDto
@{
    ViewData["Title"] = "Entrar - Olove";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <div class="card p-5 shadow-sm border-0 mt-5">
            <div class="text-center mb-5">
                <h1 class="logo-text">Olove</h1>
                <p class="text-muted small fw-bold text-uppercase">¡Bienvenido de nuevo!</p>
            </div>
            
            <form asp-action="Login" method="post">
                <div asp-validation-summary="All" class="text-danger small mb-3"></div>
                
                <div class="mb-3">
                    <label asp-for="Email" class="form-label text-muted small fw-bold">CORREO ELECTRÓNICO</label>
                    <input asp-for="Email" class="form-control border-0 bg-light p-3" placeholder="tu@email.com" required />
                </div>
                
                <div class="mb-4">
                    <label asp-for="Password" class="form-label text-muted small fw-bold">CONTRASEÑA</label>
                    <input asp-for="Password" type="password" class="form-control border-0 bg-light p-3" placeholder="********" required />
                </div>
                
                <button type="submit" class="btn btn-buy w-100 py-3 fw-bold mb-4 shadow-sm">ENTRAR</button>
                
                <div class="text-center border-top pt-4">
                    <p class="small text-muted mb-0">¿No tienes una cuenta? <a asp-action="Register" class="text-accent fw-bold text-decoration-none">CREA UNA AHORA</a></p>
                </div>
            </form>
        </div>
    </div>
</div>

@model IEnumerable<SexShop.Application.DTOs.ProductDto>
@{
    ViewData["Title"] = "Gestión de Productos - Olove";
}

<div class="row pt-5 mb-4 align-items-center">
    <div class="col-md-6">
        <h2 class="fw-bold">Gestión de <span class="text-accent">Productos</span></h2>
        <p class="text-muted small">Administra tu catálogo de la Boutique</p>
    </div>
    <div class="col-md-6 text-md-end">
        <a asp-action="CreateProduct" class="btn btn-buy shadow-sm px-4"><i class="bi bi-plus-lg me-2"></i>NUEVO PRODUCTO</a>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr class="text-muted small text-uppercase fw-bold">
                        <th class="ps-4 border-0">Imagen</th>
                        <th class="border-0">Nombre</th>
                        <th class="border-0">Precio</th>
                        <th class="border-0">Stock</th>
                        <th class="border-0">Estado</th>
                        <th class="text-end pe-4 border-0">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="align-middle">
                            <td class="ps-4">
                                <img src="@item.ImageUrl" style="height: 50px; width: 50px; object-fit: contain; background: #f8f9fa; padding: 5px; border-radius: 8px;">
                            </td>
                            <td class="fw-bold">@item.Name</td>
                            <td class="text-accent fw-bold">$@item.Price.ToString("N0")</td>
                            <td>@item.Stock</td>
                            <td>
                                @if (item.Activo)
                                {
                                    <span class="badge rounded-pill bg-success-subtle text-success px-3">Activo</span>
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-danger-subtle text-danger px-3">Inactivo</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="EditProduct" asp-route-id="@item.Id" class="btn btn-light btn-sm text-accent rounded-circle me-1" title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form asp-action="DeleteProduct" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('¿Seguro que deseas eliminar este producto?')">
                                    <button type="submit" class="btn btn-light btn-sm text-danger rounded-circle" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@model SexShop.Application.DTOs.ProductDto
@{
    ViewData["Title"] = "Editar Producto";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <div class="card p-4 shadow-lg">
            <h2 class="fw-bold mb-4">Editar <span class="text-accent">Producto</span></h2>
            <hr class="border-secondary mb-4">
            
            <form asp-action="EditProduct" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Name" class="form-label text-secondary small">Nombre del Producto</label>
                        <input asp-for="Name" class="form-control bg-dark text-white border-secondary" placeholder="Ej: Vibrador Premium" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Price" class="form-label text-secondary small">Precio ($)</label>
                        <input asp-for="Price" class="form-control bg-dark text-white border-secondary" type="number" step="0.01" required />
                    </div>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Description" class="form-label text-secondary small">Descripción</label>
                    <textarea asp-for="Description" class="form-control bg-dark text-white border-secondary" rows="3" required></textarea>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Stock" class="form-label text-secondary small">Stock Actual</label>
                        <input asp-for="Stock" class="form-control bg-dark text-white border-secondary" type="number" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Category" class="form-label text-secondary small">Categoría</label>
                        <select asp-for="Category" class="form-select bg-dark text-white border-secondary" required>
                            <option value="">Seleccione una categoría...</option>
                            <option value="Para Él">Para Él</option>
                            <option value="Para Ella">Para Ella</option>
                            <option value="Vibradores">Vibradores</option>
                            <option value="Cosméticos">Cosméticos</option>
                            <option value="Accesorios">Accesorios</option>
                            <option value="Diversión">Diversión</option>
                            <option value="Lencería">Lencería</option>
                        </select>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label text-secondary small">URL de la Imagen</label>
                    <input asp-for="ImageUrl" class="form-control bg-dark text-white border-secondary" placeholder="/images/producto.jpg" required />
                </div>
                
                <div class="form-check mb-4">
                    <input asp-for="Activo" class="form-check-input" type="checkbox" />
                    <label asp-for="Activo" class="form-check-label text-white">Producto Activo</label>
                </div>
                
                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-primary px-5 fw-bold">Guardar Cambios</button>
                    <a asp-action="Products" class="btn btn-outline-light px-4">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@model SexShop.Web.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Dashboard Administrativo";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#" class="text-accent">Admin</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </nav>
            <h2 class="fw-bold">Dashboard <span class="text-accent">Administrativo</span></h2>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="dashboard-stat-card shadow-sm h-100">
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="text-muted small mb-1">TOTAL PRODUCTOS</p>
                        <h3 class="fw-bold mb-0">@Model.TotalProducts</h3>
                    </div>
                    <div class="bg-light p-3 rounded-circle">
                        <i class="bi bi-box-seam fs-4 text-accent"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="dashboard-stat-card shadow-sm h-100">
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="text-muted small mb-1">USUARIOS ACTIVOS</p>
                        <h3 class="fw-bold mb-0">@Model.TotalUsers</h3>
                    </div>
                    <div class="bg-light p-3 rounded-circle">
                        <i class="bi bi-people fs-4 text-accent"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="dashboard-stat-card shadow-sm h-100">
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="text-muted small mb-1">VENTAS TOTALES</p>
                        <h3 class="fw-bold mb-0">$@Model.TotalSales.ToString("N0")</h3>
                    </div>
                    <div class="bg-light p-3 rounded-circle">
                        <i class="bi bi-currency-dollar fs-4 text-accent"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card p-4 shadow-sm">
                <h5 class="fw-bold mb-4">Gestión Rápida</h5>
                <div class="d-flex gap-3">
                    <a asp-action="CreateProduct" class="btn btn-buy px-4 py-2">
                        <i class="bi bi-plus-lg me-2"></i> AGREGAR PRODUCTO
                    </a>
                    <a asp-action="Products" class="btn btn-outline-accent px-4 py-2">
                        <i class="bi bi-grid-3x3-gap me-2"></i> GESTIONAR CATÁLOGO
                    </a>
                    <a href="#" class="btn btn-outline-secondary px-4 py-2">
                        <i class="bi bi-person-lines-fill me-2"></i> VER CLIENTES
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

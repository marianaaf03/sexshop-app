<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SexShop Boutique</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body>
    <header class="bg-white border-bottom shadow-sm">
        <div class="container-fluid px-4 py-2 d-flex align-items-center justify-content-between header-top">
            <a class="navbar-brand fw-bold d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                <span class="logo-text">Olove</span>
            </a>

            <div class="search-container flex-grow-1 mx-5 d-none d-md-block">
                <form asp-controller="Home" asp-action="Index" method="get">
                    <div class="input-group">
                        <input type="text" name="searchString" class="form-control border-end-0" placeholder="Digite aqui..." aria-label="Search" value="@ViewBag.SearchString">
                        <button type="submit" class="input-group-text bg-white border-start-0 text-accent" style="cursor: pointer;">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </form>
            </div>

            <div class="user-actions d-flex align-items-center">
                <ul class="navbar-nav flex-row align-items-center">
                    @if (User.Identity!.IsAuthenticated)
                    {
                        <li class="nav-item me-3">
                            <span class="text-secondary small">Hola, @User.Identity.Name</span>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item me-3">
                                <a class="btn btn-sm btn-outline-accent fw-bold" asp-controller="Admin" asp-action="Dashboard">Admin Panel</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-3 position-relative">
                                <a class="nav-link p-0 text-dark fs-4" asp-controller="Cart" asp-action="Index">
                                    <i class="bi bi-bag"></i>
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link p-0 text-dark fs-4" asp-controller="Account" asp-action="Logout" title="Cerrar Sesión">
                                <i class="bi bi-box-arrow-right"></i>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item me-3">
                            <a class="nav-link p-0 text-dark fs-4" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-person"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link p-0 text-dark fs-4" asp-controller="Cart" asp-action="Index">
                                <i class="bi bi-bag"></i>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
        

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted border-top mt-5 py-3">
        <div class="container text-center">
            &copy; 2026 - SexShop - <span class="text-accent">Placer y Elegancia</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
